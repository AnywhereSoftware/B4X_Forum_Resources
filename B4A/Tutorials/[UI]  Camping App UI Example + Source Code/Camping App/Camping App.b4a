	'PanelSelection.SendToBack
	PanelSelection.SendToBack
End Sub
''CLV Item Create
Sub CreateItem()
	For i = 0 To 3 
		Dim p As B4XView = xui.CreatePanel("")
		Dim height As Int = 56%y
		p.SetLayoutAnimated(0, 0, 0, 100%x , height)
		p.LoadLayout("Card")
		Dim Info As MyTy
		B4XImageView2.CornersRadius = 30dip
		B4XImageView2.Bitmap = bitmp(i)
		LocaName_Lbl.Text = StrCamps(i)
		Location_Lbl.Text = StrLocations(i)
		
		Info.SomeBitmap = bitmp(i)
		Info.SomeStr = StrCamps(i)
		Info.SomeLocation = StrLocations(i)
		CustomListView1.Add(p,Array(i,Info))
	Next
End Sub

