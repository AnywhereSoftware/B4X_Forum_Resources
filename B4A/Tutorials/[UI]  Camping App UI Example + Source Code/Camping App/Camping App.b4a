Sub Panel_Selection_Attr(Selection As ImageView)
	'PanelSelection.Initialize("PanelSelection")
	Home_Btn.Bitmap = LoadBitmap(File.DirAssets,"Home.png")
	Profile_Btn.Bitmap = LoadBitmap(File.DirAssets,"User.png")
	Fav_Btn.Bitmap = LoadBitmap(File.DirAssets,"Heart.png")
	Calendar_Btn.Bitmap = LoadBitmap(File.DirAssets,"Calendar.png")
	Discover_Btn.Bitmap =  LoadBitmap(File.DirAssets,"Safari.png")
	Select Selection
		Case Home_Btn
			Dim bmp As B4XBitmap = LoadBitmap(File.DirAssets,"Home.png")
		Case Profile_Btn
			Dim bmp As B4XBitmap = LoadBitmap(File.DirAssets,"User.png")
		Case Fav_Btn
			Dim bmp As B4XBitmap = LoadBitmap(File.DirAssets,"Heart.png")
		Case Calendar_Btn
