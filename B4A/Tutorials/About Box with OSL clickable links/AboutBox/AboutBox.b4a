Sub Globals
	'These global variables will be redeclared each time the activity is created.
	Private lvOSL As ListView
	Private clvOSL As CustomListView
	Private lblMadeWithLove As Label
	
	Dim cs As CSBuilder	'String Builder
	
End Sub

Sub Activity_Create(FirstTime As Boolean)
	Activity.LoadLayout("Layout")
	
	'//here is the code to populate the various fields in the About Box
	lvOSL.Color=Colors.RGB(198,198,198)
	SetDivider(lvOSL, Colors.RGB(192,192,192), 1dip)
	lvOSL.SingleLineLayout.Label.TextSize = 12
	lvOSL.FastScrollEnabled = True
	
	'//Here is the list of clickable Open Source links (add  or remove items as required)
	lvOSL.Clear
	lvOSL.AddSingleLine(cs.Initialize.Typeface(Typeface.FONTAWESOME).Size(16).VerticalAlign(1dip).Color(Colors.Black).Append("MaterialDateAndTime Picker Dialog developed by DonManfred : ").Underline.Color(Colors.Blue).Append("https://www.b4x.com/android/forum/threads/materialdatetimepicker.68323/").PopAll)
	lvOSL.AddSingleLine(cs.Initialize.Typeface(Typeface.FONTAWESOME).Size(16).VerticalAlign(1dip).Color(Colors.Black).Append("Animation Plus developed by Informatix : ").Underline.Color(Colors.Blue).Append("https://www.b4x.com/android/forum/threads/lib-animationplus.21313/").PopAll)
	lvOSL.AddSingleLine(cs.Initialize.Typeface(Typeface.FONTAWESOME).Size(16).VerticalAlign(1dip).Color(Colors.Black).Append("Arc Menu developed by Barx : ").Underline.Color(Colors.Blue).Append("https://www.b4x.com/android/forum/threads/arc-menu-class-lib.28285/#content").PopAll)
	lvOSL.AddSingleLine(cs.Initialize.Typeface(Typeface.FONTAWESOME).Size(16).VerticalAlign(1dip).Color(Colors.Black).Append("B4X developed and copyrighted by Anywhere Software : ").Underline.Color(Colors.Blue).Append("https://www.b4x.com/").PopAll)
	lvOSL.AddSingleLine(cs.Initialize.Typeface(Typeface.FONTAWESOME).Size(16).VerticalAlign(1dip).Color(Colors.Black).Append("Android operating system developed and copyrighted by Google : ").Underline.Color(Colors.Blue).Append("https://developer.android.com/").PopAll)
	
	'//Here is the Creative Commons license text copied and pasted from the CC website (again add or remove accordingly)
	clvOSL.Clear
	clvOSL.DefaultTextBackgroundColor=0xFFC0C0C0
	clvOSL.AddTextItem(File.ReadString(File.DirAssets, "legalcode.txt"), "")
	
	'//Finally add the made with love text and heart symbol
	AddMadeWithLoveText
	
End Sub

