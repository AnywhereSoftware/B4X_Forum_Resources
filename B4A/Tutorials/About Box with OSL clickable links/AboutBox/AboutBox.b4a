'//Handling an item clicked on the opensource list view (add or remove as required)
'//Will open the default browser on the device and populate the URL
Sub lvOSL_ItemClick(Position As Int, Value As Object)
	Dim i As Intent
	
	If Position = 0 Then
		i.Initialize(i.ACTION_VIEW, "https://www.b4x.com/android/forum/threads/materialdatetimepicker.68323/")
		StartActivity(i)
	else if Position = 1 Then
		i.Initialize(i.ACTION_VIEW, "https://www.b4x.com/android/forum/threads/lib-animationplus.21313/")
		StartActivity(i)
	else if Position = 2 Then
		i.Initialize(i.ACTION_VIEW, "https://www.b4x.com/android/forum/threads/arc-menu-class-lib.28285/#content")
		StartActivity(i)
	else if Position  = 3 Then
		i.Initialize(i.ACTION_VIEW, "https://www.b4x.com/")
		StartActivity(i)
	else if Position = 4 Then
		i.Initialize(i.ACTION_VIEW, "https://developer.android.com/")
		StartActivity(i)
	End If
	
End Sub

'//This will add the Made with Love text to the label (lblMadeWithLove)
'//Change the text, icon to your hearts desire :)
Sub AddMadeWithLoveText
	cs.Initialize.Typeface(Typeface.FONTAWESOME).Append("Made in India With ").Typeface(Typeface.FONTAWESOME).Color(xui.Color_Red).Append(Chr(0xF004)).Pop.Pop _
        .Typeface(Typeface.FONTAWESOME).Append(" using ").Clickable("cs", "").Underline.Color(xui.Color_Blue).Append("B4A").PopAll
	cs.EnableClickEvents(lblMadeWithLove)
	lblMadeWithLove.Text = cs
End Sub

'//Handle the click on the Made with love label link
Sub cs_Click (Tag As Object)
	Dim i As Intent
	i.Initialize(i.ACTION_VIEW, "https://www.b4x.com")
	StartActivity(i)
End Sub

Sub SetDivider(lv As ListView, Color As Int, Height As Int)
	Dim r As Reflector
	r.Target = lv
	Dim CD As ColorDrawable
	CD.Initialize(Color, 0)
	r.Runmethod4("setDivider", Array As Object(CD), Array As String("android.graphics.drawable.Drawable"))
	r.Runmethod2("setDividerHeight", Height, "java.lang.int")
End Sub