<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="b4a.Requester"
	android:versionCode="1"
	android:versionName=""
	android:installLocation="internalOnly">
	
	<uses-sdk android:minSdkVersion="5" android:targetSdkVersion="30"/>
	<supports-screens android:largeScreens="true" 
	    android:normalScreens="true" 
	    android:smallScreens="true" 
	    android:anyDensity="true"/>
	<queries>
	    <package android:name="b4a.Provider" />
	    <package android:name="com.example.service" />
	    <intent>
	      <action android:name="b4a.Provider.REQUEST" />
	      <data android:mimeType="text/plain" />
	    </intent>
	  </queries>
	<uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
	<uses-permission android:name="android.permission.WAKE_LOCK"/>
	<application
		android:icon="@drawable/icon"
		android:label="Requester"
		android:theme="@style/DarkTheme">
		<activity
			android:windowSoftInputMode="stateHidden"
			android:launchMode="singleTop"
			android:name=".main"
			android:label="Requester"
			android:screenOrientation="unspecified">
			<intent-filter>
			   <action android:name="android.intent.action.MAIN" />
			   <category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			
		</activity>
		<service android:name=".starter">
		</service>
		<receiver android:name=".starter$starter_BR">
		</receiver>
		<service android:name=".receiver">
			
			<intent-filter>
			   <action android:name="b4a.Requester.CALLBACK" />
			   <category android:name="android.intent.category.DEFAULT" />
			   <data android:mimeType="text/plain" />
			</intent-filter>
		</service>
		<receiver android:name=".receiver$receiver_BR">
		</receiver>
	</application>
</manifest>