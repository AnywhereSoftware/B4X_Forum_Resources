Sub SetRadialGradient(GD As GradientDrawable, color1 As Int, color2 As Int, radius As Float)
	GD.Initialize("TOP_BOTTOM", Array As Int(color1, color2))
	Dim r As Reflector
	r.Target = GD
	r.RunMethod2("setGradientType", 1, "java.lang.int")
	r.RunMethod2("setGradientRadius", radius, "java.lang.float")
End Sub
