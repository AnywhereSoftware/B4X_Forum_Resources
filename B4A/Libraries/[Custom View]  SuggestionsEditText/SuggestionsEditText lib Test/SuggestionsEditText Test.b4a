Sub Globals
	'These global variables will be redeclared each time the activity is created.
	'These variables can only be accessed from this module.

	Private SuggestionsEditText1 As SuggestionsEditText
	Private SuggestionsEditText2 As SuggestionsEditText
End Sub

Sub Activity_Create(FirstTime As Boolean)
	'Do not forget to load the layout file created with the visual designer. For example:
	Activity.LoadLayout("layMain")

	' ***  SuggestionsEditText added by Designer  ***
	' We need to call DeleteAllWordsDB ONCE, before calling
	' any InitWordsDB.
	SuggestionsEditText1.DeleteAllWordsDBs("")
	
	' Initialize the DB associated to SuggestionsEditText1
	SuggestionsEditText1.InitWordsDB
	' Fills the DB.
	Dim lstCities As List = File.ReadList(File.DirAssets, "cities.txt")
	SuggestionsEditText1.AddAll(lstCities)
	' Sets the hint text.
	SuggestionsEditText1.GetForegroundEditText.Hint = "City"

	
	' ***  SuggestionsEditText added by Code  ***
	SuggestionsEditText2.Initialize(Me, "SuggestionsEditText2")
	SuggestionsEditText2.AddToParent(Activity, 0, SuggestionsEditText1.GetBase.Height + 20dip, SuggestionsEditText1.GetBase.Width, SuggestionsEditText1.GetBase.Height)
	' Initialize the DB associated to SuggestionsEditText2
	SuggestionsEditText2.InitWordsDB
	' Fills the DB.
	SuggestionsEditText2.AddAll(Array As String("January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"))
	' Sets the hint text.
	SuggestionsEditText2.GetForegroundEditText.Hint = "Month"
	' Accepts any word.
	SuggestionsEditText2.InDBOnly = False
	
	SuggestionsEditText2.Color = Colors.Blue
	SuggestionsEditText2.TextColor = Colors.White

End Sub

