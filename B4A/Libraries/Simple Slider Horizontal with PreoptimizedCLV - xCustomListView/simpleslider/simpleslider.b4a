Sub showslider
	sliderpanel.RemoveAllViews
	sliderpanel.LoadLayout("slideritem")
	PCLV.Initialize(Me, "PCLV", clv_slideritem)
	PCLV.ShowScrollBar=False
	clv_slideritem.Clear
	clv_slideritem.AsView.SetLayoutAnimated(0,0,0,sliderpanel.width,sliderpanel.height)
	snap.Initialize(clv_slideritem, True)
	
	If urlmap.Size>0  Then
		For a=0 To urlmap.Size -1
			PCLV.AddItem(sliderpanel.Width, xui.Color_Transparent, a)
		Next
		PCLV.Commit
		sliderpanel.Visible=True
	End If
End Sub
Sub clv_slideritem_VisibleRangeChanged (FirstIndex As Int, LastIndex As Int)
	For Each i As Int In PCLV.VisibleRangeChanged(FirstIndex, LastIndex)
		If urlmap.Size>0 Then
			Dim item As CLVItem = clv_slideritem.GetRawListItem(i)
			Dim i As Int = item.Value
			
			Dim pnl As B4XView = xui.CreatePanel("")
			item.Panel.Color=Colors.white
			item.Panel.AddView(pnl, 0, 0, sliderpanel.Width, sliderpanel.Height)
			pnl.AddView(CreateListItem(urlmap.GetValueAt(i),urlmap.GetKeyAt(i)),0,0,sliderpanel.Width,sliderpanel.Height)
		End If
	Next
End Sub
