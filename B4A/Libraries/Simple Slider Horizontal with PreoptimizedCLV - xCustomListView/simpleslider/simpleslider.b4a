Sub Activity_Create(FirstTime As Boolean)
	'Do not forget to load the layout file created with the visual designer. For example:
	sliderpanel.Initialize("sliderpanel")
	Activity.AddView(sliderpanel,0,0,100%x,100%y)
	
	urlmap.Initialize
	For i=1 To 500
		urlmap.Put("https://i.picsum.photos/id/" & i & "/200/300.jpg","imagen:" & i)
	Next
	showslider
End Sub

