Sub CreateListItem(Text As String, urlimage As String) As Panel
	Dim p As Panel
	p.Initialize("")
	p.SetLayout(0, 0, clv_slideritem.AsView.Width, clv_slideritem.AsView.Height)
	p.Color=Colors.White

	Dim sizelabel As Int = 5%y

	Dim img As ImageView
	img.Initialize("")
	p.AddView(img,0,0,clv_slideritem.AsView.Width, clv_slideritem.AsView.Height-sizelabel)
	img.Gravity=Gravity.CENTER
	CallSubDelayed3(Starter, "DownloadFitimage", urlimage, img)

	Dim Label1 As Label
	Label1.Initialize("")
	Label1.Text = Text.ToUpperCase
	Label1.Color = Colors.ARGB(20,0,0,255)
	Label1.TextColor = Colors.Black
	Label1.TextSize = 12
	Label1.Gravity=Bit.Or(Gravity.LEFT,Gravity.TOP)
	Label1.Padding = Array As Int (15dip, 5dip, 5dip, 5dip)
	p.AddView(Label1,0,100%y-sizelabel,clv_slideritem.AsView.Width,clv_slideritem.AsView.Height-(100%y-sizelabel))

	Return p
End Sub
