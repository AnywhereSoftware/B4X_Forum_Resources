Sub InitWheelData
	Dim lstDate(2) As List
	lstDate(0).Initialize
	lstDate(1).Initialize
	
	whlDate.Initialize(Me, Activity, "Enter date", 3, Null, 24, 0, True)
'	whlDate.Initialize(Me, Activity, "Enter date, date, date, date, date, date, date", 3, Null, 24, 0, True)
	whlDate.FirstYear = 1940
	Dim tmpYear As Int = DateTime.GetYear(DateTime.Now) - whlDate.FirstYear
	whlDate.NumberOfYears = tmpYear + 1  'until current year
	
	whlTimeHM.Initialize(Me, Activity, "Enter Time", 2, Null, 30, 1, True)
	whlTimeHMS.Initialize(Me, Activity, "Enter Time", 3, Null, 24, 2, True)
	whlDateTime.Initialize(Me, Activity, "Enter Date + Time", 5, Null, 24, 3, True)

	lstDate(0).Add("Apple")	
	lstDate(0).Add("Pear")	
	lstDate(0).Add("Peche")	
	lstDate(0).Add("Apricot")	
	lstDate(0).Add("Cherry")	
	lstDate(0).Add("Prune")	
	lstDate(0).Add("Strawberry")	
	lstDate(0).Add("Raspberry")	
	lstDate(0).Add("Blueberry")	
	lstDate(0).Add("Cranberry")	
	lstDate(0).Add("Ananas")	
	lstDate(0).Add("Banana")	
	lstDate(0).Add("Kiwi")	
	lstDate(0).Add("Orange")	
	lstDate(0).Add("Grapefruit")	
	lstDate(0).Add("Currant")	
	lstDate(0).Add("Grape")		
	
	lstDate(1).Add("Oak")	
	lstDate(1).Add("Aspen")	
	lstDate(1).Add("Maple")	
	lstDate(1).Add("Pine")	
	lstDate(1).Add("Sequoia")	
	lstDate(1).Add("Birch")	
	lstDate(1).Add("Larch")	
	lstDate(1).Add("Beech")	
	lstDate(1).Add("Eucalyptus")	
	' no logic behind these choices, just for demonstration
	whlCustom.Initialize(Me, Activity, "Enter fruits & trees", 2, lstDate, 24, 4, False)
	whlCustom.SetSeparationText(" & ")
	
	Dim lstDate1(1) As List
	lstDate1(0).Initialize
	
	lstDate1(0).Clear
	lstDate1(0).AddAll(Array As String("Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"))
	whlCustomSingle.Initialize(Me, Activity, "Enter day of the week", 1, lstDate1, 24, 4, False)
'	lstDate1(0).AddAll(Array As String(" 0", "15", "30", "45"))
'	whlCustomSingle.Initialize(Me, Activity, "Enter day of the week", 1, lstDate1, 24, 4, True)

End Sub

