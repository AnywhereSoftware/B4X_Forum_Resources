Sub edtTime_FocusChanged (HasFocus As Boolean)
	If HasFocus = True Then
		whlTimeHM.Show(edtTime, edtTime.Text)
	End If
End Sub

Sub edtDate_FocusChanged (HasFocus As Boolean)
	If HasFocus = True Then
		whlDate.Show(edtDate, edtDate.Text)
	End If
End Sub

Sub lblCustom_Click
	whlCustom.Show(lblCustom, lblCustom.Text)
End Sub

Sub btnEvent_Click
	whlCustom.Show2("whlCustom", lblCustom.Text)
End Sub

Sub whlCustom_Closed(Canceled As Boolean, Selection As String)
	If Canceled = False Then
		Activity.Title = Selection
	Else
	End If
End Sub

Sub whlCustom_StartScroll
	Activity.Title = "Scrolling"
End Sub

Sub whlCustom_EndScroll
	Activity.Title = ""
End Sub
