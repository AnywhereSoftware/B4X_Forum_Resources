Private Sub Server_HandleRequest (Request As ServletRequest, Response As ServletResponse)
	' Insecure connection - normal http
	If Request.Method="POST" Then
		Log(Request.GetParameter("fname"))
		Log(Request.GetParameter("lname"))
	Else
		Dim Body As String = $"
		<a href="/dir/index.httl">Click here for Digest</a>
		<br><br>
		<form action="/action_page.php" method="post">
		<label for="fname">First name:</label>
		<input type="text" id="fname" name="fname"><br><br>
		<label for="lname">Last name:</label>
		<input type="text" id="lname" name="lname"><br><br>
		<input type="submit" value="Submit">
		</form>"$
		Response.SetContentType("text/html")
		Response.SendString(Body)
	End If
End Sub

