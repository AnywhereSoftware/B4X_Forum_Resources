Sub Activity_Create(FirstTime As Boolean)
	Activity.LoadLayout("Layout")
	
	Server.Initialize(Me,"Server")
	'.digset etxt list of: User:realm:Password
	File.Copy(File.DirAssets,"file.htdigest",File.DirInternalCache,"file.htdigest")
	Server.htdigestlist=File.ReadList(File.DirInternalCache,"file.htdigest")
	Server.Start(51051)
	Server.DigestPath="/dir/"
	Server.IgnoreNC=True
End Sub

