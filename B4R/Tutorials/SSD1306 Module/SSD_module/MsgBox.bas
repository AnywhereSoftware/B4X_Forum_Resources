public Sub Show(bType As Byte,Title As String, Line1 As String,Line2 As String,bRound As Boolean)
	SSD.Clear
	SSD.PutString (24,0,Title,SSD.Font12x22,False,False)
	SSD.PutString (0,4,Line1,SSD.Font8x16,False,True)
	SSD.PutString (0,6,Line2,SSD.Font8x16,False,True)
	SSD.Update 'put text, move to lcd then draw boxes and lines
	
	Select bType
		Case MSGBOX_NON
		Case MSGBOX_ERR
			SSD.LoadImageMEM(3,4,16,16,errBitmap,False)
		Case MSGBOX_EXC
			SSD.LoadImageMEM(3,4,16,16,excBitmap,False)
		Case MSGBOX_INF
			SSD.LoadImageMEM(3,4,16,16,infoBitmap,False)
		Case MSGBOX_QST
			SSD.LoadImageMEM(3,4,16,16,qstBitmap,False)
	End Select
	If bRound Then
		SSD.DrawRoundRect(0,0,SSD.SSD1306_LCDWIDTH - 1,SSD.SSD1306_LCDHEIGHT -1)
	Else
		SSD.DrawRect(0,0,SSD.SSD1306_LCDWIDTH - 1,SSD.SSD1306_LCDHEIGHT -1)
	End If
	SSD.DrawHline(0,22,SSD.SSD1306_LCDWIDTH)
	SSD.DrawVline(22,0,22)
	SSD.Update
End Sub
