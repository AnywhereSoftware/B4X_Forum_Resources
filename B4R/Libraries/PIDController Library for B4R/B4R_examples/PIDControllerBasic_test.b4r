Sub Process_Globals
	Public Serial1 As Serial
	Private wifi As ESP8266WiFi 
	Private pinInput0 As Pin
	Private pinOutput3 As Pin
	Private Parameters As PIDParameters
	Private parametersID As ULong
	Private pidController As PIDController
End Sub

Private Sub AppStart
	Serial1.Initialize(115200)
	Log("AppStart")
	'example of connecting to a local network
	If wifi.Connect2("SSID", "PASSWORD") Then
		Log("Connected to network")
	Else
		Log("Failed to connect to network")
	End If
	pinInput0.Initialize(0, pinInput0.MODE_INPUT)
	pinOutput3.Initialize(3, pinOutput3.MODE_OUTPUT)	
	parametersID = Parameters.Initialize(4.0, 0.2, 1)
	pidController.Initialize(parametersID,pidController.DIRECTION_DIRECT)
	
	pidController.Input = pinInput0.AnalogRead
	pidController.Setpoint =100
	
	pidController.TurnOn(True)
	AddLooper("localLoop")
End Sub

Sub LocalLoop
	pidController.Input = pinInput0.AnalogRead
	pidController.Update()
	
	pinOutput3.AnalogWrite(pidController.Output)
End Sub


