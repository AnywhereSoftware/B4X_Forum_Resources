Sub Process_Globals
	Private PAGEHEADING As String = "rLovyanGFXEx HELPER"

	'Communication
	Public Serial1 As Serial

	'Display
	Private lcd As LovyanGFXEx
End Sub

Private Sub AppStart
	Serial1.Initialize(115200)
	Log(CRLF, CRLF, "[AppStart]", PAGEHEADING)

	'Init display without touch event
	lcd.Initialize(Null)
	lcd.DisplayRotation = 1
	
	'LED OFF
	lcd.SetRGBLEDOff
End Sub
