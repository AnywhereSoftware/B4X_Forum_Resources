Sub Process_Globals
	Private srvr As Server
	Dim SQLFileName As String = "report.sqlite"
	Dim DB As SQL
End Sub

Sub AppStart (Args() As String)
	DB.InitializeSQLite(File.DirApp, SQLFileName, False)
	
	srvr.Initialize("srvr")
	srvr.Port = 8081
	srvr.StaticFilesFolder = File.Combine(File.DirApp, "www")
	
	srvr.AddHandler("/hello", "hello", False)
	srvr.AddHandler("/hello2", "hello2", False)

	srvr.Start
	StartMessageLoop
	'open browser and navigate to: http://127.0.0.1:51042/
End Sub
