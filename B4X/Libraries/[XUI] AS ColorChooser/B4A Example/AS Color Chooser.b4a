	Private ascc_horizont As ASColorChooser
	Private ascc_vertical As ASColorChooser
	
	Private Panel1 As B4XView
	Private Panel2 As B4XView
End Sub

Sub Activity_Create(FirstTime As Boolean)
	'Do not forget to load the layout file created with the visual designer. For example:
	Activity.LoadLayout("frm_main")
	Activity.Title = "AS Color Chooser Example"

	AddColors(ascc_horizont)
	AddColors(ascc_vertical)

End Sub

Sub Activity_Resume

End Sub

