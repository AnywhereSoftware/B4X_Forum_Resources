End Sub

Private Sub AddColors(tmp_ascc As ASColorChooser)
	
	tmp_ascc.AddColor(xui.Color_ARGB(255,192, 57, 43))
	tmp_ascc.AddColor(xui.Color_ARGB(255,221, 95, 95))
	tmp_ascc.AddColor(xui.Color_ARGB(255,22, 28, 32))
	tmp_ascc.AddColor(xui.Color_ARGB(255,142, 68, 173))
	tmp_ascc.AddColor(xui.Color_ARGB(255,52, 152, 219))
	tmp_ascc.AddColor(xui.Color_ARGB(255,72, 98, 163))
	tmp_ascc.AddColor(xui.Color_ARGB(255,45, 136, 121))
	
End Sub


Sub ascc_horizont_ColorClicked(color As Int)
	Panel1.Color = color
End Sub

Sub ascc_vertical_ColorClicked(color As Int)
