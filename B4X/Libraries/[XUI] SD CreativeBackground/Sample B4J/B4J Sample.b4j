Sub Process_Globals
	Private fx As JFX
	Private xui As XUI
	
	Private MainForm As Form
	Private Pane1 As B4XView
	Private Pane2 As B4XView
	Private Pane3 As B4XView
	Private Pane4 As B4XView
	Private Label11 As B4XView
	Private Label12 As B4XView
	
	
	Private PaneBase As B4XView
	Private Label01 As B4XView
	Private Label02 As B4XView
	Private Label03 As B4XView
